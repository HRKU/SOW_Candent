<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="addRoleDialog"
        title="Add New Role"
        draggable="true"
    >
        <content>
            <VBox
                class="sapUiContentPadding sapUiLargeMarginBeginEnd sapUiMediumMarginTopBottom"
            >
                <ComboBox
                    id="roleComboBox"
                    width="100%"
                    items="{roles>/roles}"
                    showSecondaryValues="true"
                    placeholder="Select or enter role"
                    change=".onRoleChange"
                >
                    <core:ListItem
                        key="{roles>id}"
                        text="{roles>name}"
                        additionalText="{roles>description}"
                    />
                </ComboBox>
                <Label
                    text="Permissions:"
                    class="sapUiSmallMarginTop"
                />
                <HBox class="sapUiSmallMargin">
                    <VBox class="permissionGroup">
                        <Label
                            text="Data Management"
                            class="permissionGroupLabel"
                        />
                        <CheckBox text="Read All Data" />
                        <CheckBox text="Read Own Data" />
                        <CheckBox text="Create Own Data" />
                        <CheckBox text="Edit Own Data" />
                        <CheckBox text="Delete Own Data" />
                    </VBox>
                    <VBox class="permissionGroup">
                        <Label
                            text="User Management"
                            class="permissionGroupLabel"
                        />
                        <CheckBox text="Create Users" />
                        <CheckBox text="Edit Users" />
                        <CheckBox text="Delete Users" />
                    </VBox>
                    <VBox class="permissionGroup">
                        <Label
                            text="Role Management"
                            class="permissionGroupLabel"
                        />
                        <CheckBox text="Create Roles" />
                        <CheckBox text="Edit Roles" />
                        <CheckBox text="Delete Roles" />
                    </VBox>
                    <VBox class="permissionGroup">
                        <Label
                            text="Permissions Management"
                            class="permissionGroupLabel"
                        />
                        <CheckBox text="Manage Permissions" />
                    </VBox>
                </HBox>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Save"
                press="onSaveRolePress"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCancelRolePress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
