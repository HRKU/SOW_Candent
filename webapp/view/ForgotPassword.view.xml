<mvc:View
	controllerName="com.candentech.sowtracker.controller.ForgotPassword"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
<Page
        id="idPage"
        showHeader="false"
        class="boxPanel"
    >
        <content>
            <FlexBox
                id="idFlexBox"
                justifyContent="Center"
                height="100%"
                alignItems="Center"
                class="boxInner"
            >
                <VBox
                    id="idVBox"
                    class="classVBox"
                >
                    <form:SimpleForm id="idSimpleForm2" class="classHBox flip-container fliper back front">
                        <VBox>
                            <HBox
                                id="idHBox2"
                                justifyContent="Center"
                                height="60px">
                                <Image
                                    id="idImage2"
                                    class="imgClass"
                                    src="/Assets/images/img.png"
                                    width="100%"
                                    height="100%"
                                />
                            </HBox>
                            <Input
                                type="Email"
                                class="emailClass sapUiResponsiveContentPadding sapUiMediumMarginBottom"
                                id="username2"
                                placeholder="Enter UserName"
                                width="100%"
                                liveChange="onInputChange"
                                valueState="{= ${email>/valueState} === 'Error' ? 'Error' : 'None'}"
                                
                            />
                        
                                
                            
                          
                                
                            
                            <Input
                                type="Tel"
                                textAlign="Center"
                                maxLength="6"
                                class="sapUiResponsiveContentPadding"
                                id="OTP"
                                placeholder="Enter OTP"
                                width="100%"
                                visible="false"
                            />
                            <!-- <VBox id="OTP" justifyContent="Center" alignItems="Center" visible="false">
                                <Label text="Enter OTP"/>
                                <HBox class="otp-container">
                                    <Input type="Tel" enabled="true" maxLength="1" class="otp-input sapUiTinyMarginEnd" id="otp1" textAlign="Center" width="40px" />
                                    <Input type="Tel" enabled="true" maxLength="1" class="otp-input sapUiTinyMarginEnd" id="otp2" textAlign="Center" width="40px" />
                                    <Input type="Tel" enabled="true" maxLength="1" class="otp-input sapUiTinyMarginEnd" id="otp3" textAlign="Center" width="40px" />
                                    <Input type="Tel" enabled="true" maxLength="1" class="otp-input sapUiTinyMarginEnd" id="otp4" textAlign="Center" width="40px" />
                                    <Input type="Tel" enabled="true" maxLength="1" class="otp-input sapUiTinyMarginEnd" id="otp5" textAlign="Center" width="40px" />
                                    <Input type="Tel" enabled="true" maxLength="1" class="otp-input sapUiTinyMarginEnd" id="otp6" textAlign="Center" width="40px" />
                                </HBox>
                            </VBox> -->
                            <VBox id="idVBox1" visible="false">
                                <Label text="Create New Password" class="sapUiSmallMarginBottom"/>
                            <Input
                                id="newPassword"
                                type="Password"
                                textAlign="Center"
                                class="sapUiResponsiveContentPadding sapUiMediumMarginBottom"
                                placeholder="Enter Password"
                                showValueHelp="true"
                                valueHelpIconSrc="sap-icon://show"
                                valueHelpRequest=".onShowPasswordSelect"
                                width="100%"
                            />
                            <Input
                                id="confirmPassword"
                                type="Password"
                                textAlign="Center"
                                class="sapUiResponsiveContentPadding sapUiMediumMarginBottom"
                                placeholder="Confirm Password"
                                showValueHelp="true"
                                valueHelpIconSrc="sap-icon://show"
                                valueHelpRequest=".onShowPasswordSelect"
                                width="100%"
                            />
                            </VBox>
                            <HBox justifyContent="SpaceBetween"> 
                                <Button 
                                id="idSendOTP"
                                text="Send OTP"
                                type="Default"
                                press="onSendOTPPress"
                            />
                                <Button
                                    id="idSubmitButton"
                                    class="sapUiResponsiveContentPadding"
                                    text="Validate OTP"
                                    type="Emphasized"
                                    press="validatePress"
                                    width="100px"
                                    visible="false"/>
                                <Button
                                    id="idSubmitButton1"
                                    class="sapUiResponsiveContentPadding"
                                    text="Submit"
                                    visible="false"
                                    type="Emphasized"
                                    press="oSubmitPress"
                                    width="100px"/>
                                <Link
                                    id="idBack"
                                    text="Back"
                                    press="onBackPress" 
                                />
                            </HBox>
                        </VBox>
                    </form:SimpleForm>
                </VBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View>