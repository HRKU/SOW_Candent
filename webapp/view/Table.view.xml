<mvc:View
    xmlns:filterbar="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="com.candentech.sowtracker.controller.Table"
>
    <Panel
        id="_IDGenPanel1"
        accessibleRole="Form"
        backgroundDesign="Transparent"
        class="sapUiResponsiveMargin sapUiSmallMargin"
        height="85vh"
        width="auto"
        stickyHeader="true"
    >
        <!-- <filterbar:FilterBar
            id="filterbar"
            persistencyKey="myPersKey"
            useToolbar="false"
            search=".onSearch"
            filterChange=".onFilterChange"
            afterVariantLoad=".onAfterVariantLoad"
        >
            <filterbar:filterGroupItems />
        </filterbar:FilterBar> -->

        <content>
            <Table
                id="projectTable"
                alternateRowColors="true"
                width="auto"
                mode="MultiSelect"
                growing="true"
                growingThreshold="50"
                autoPopinMode="true"
                sticky="ColumnHeaders,HeaderToolbar"
            >
                <headerToolbar>
                    <OverflowToolbar
                        id="toolbar"
                        design="Solid"
                    >
                        <Button
                            id="_IDGenButton1"
                            icon="sap-icon://download"
                            text="Template"
                            press="onDownloadTemplate"
                            visible="{path:'userdetails>/role',formatter:'.formatter.userChecker'}"
                        />
                        <!-- <SearchField
                            id="Type"
                            placeholder="Filter by Type"
                            search=".onFilter"
                            width="15rem"
                        /> -->
                        <ComboBox
                            id="type"
                            change=".onFilter"
                            width="15rem"
                            placeholder="Select Type"
                            items="{docs>/Type}"
                            visible="false"
                        >
                            <items>
                                <core:ListItem
                                    id="_IDGenListItem2"
                                    text="{docs>name}"
                                    key="{docs>name}"
                                />
                            </items>
                        </ComboBox>
                        <ComboBox
                            id="companyName"
                            change=".onFilter"
                            width="15rem"
                            placeholder="Select Company Name"
                            items="{docs>/CompanyName}"
                            visible="false"
                        >
                            <items>
                                <core:ListItem
                                    id="_IDGenListItem3"
                                    text="{docs>name}"
                                    key="{docs>name}"
                                />
                            </items>
                        </ComboBox>
                        <!-- <SearchField
                            id="CompanyName"
                            placeholder="Filter by Company Name"
                            search=".onFilter"
                            width="15rem"
                        /> -->
                        <!-- <SearchField
                            id="ProjectName"
                            placeholder="Filter by Project Name"
                            search=".onFilter"
                            width="15rem"
                        /> -->
                        <ComboBox
                            id="projectName"
                            change=".onFilter"
                            width="15rem"
                            placeholder="Select Project Name"
                            items="{docs>/ProjectName}"
                            visible="false"
                        >
                            <items>
                                <core:ListItem
                                    id="_IDGenListItem4"
                                    text="{docs>name}"
                                    key="{docs>name}"
                                />
                            </items>
                        </ComboBox>
                        <ComboBox
                            id="status"
                            change=".onFilter"
                            width="15rem"
                            placeholder="Select Status"
                            visible="false"
                        >
                            <items>
                                <core:ListItem
                                    id="active"
                                    text="active"
                                    key="active"
                                />
                                <core:ListItem
                                    id="inactive"
                                    text="inactive"
                                    key="inactive"
                                />
                            </items>
                        </ComboBox>

                        <Button
                            id="clearFilter"
                            text="Clear Filter"
                            press=".onClearFilter"
                        />
                        <ToolbarSpacer id="seprate" />
                        <Button
                            id="_IDGenButton6"
                            icon="sap-icon://sort"
                            text="Sorter"
                            press="handleOpenDialog"
                        />
                        <unified:FileUploader
                            id="fileUpload"
                            fileType="xlsx,csv,xls"
                            style="Emphasized"
                            placeholder="Upload"
                            buttonOnly="true"
                            iconOnly="true"
                            icon="sap-icon://upload"
                            multiple="false"
                            change=".onFileUpload"
                            visible="{path:'userdetails>/role',formatter:'.formatter.userChecker'}"
                        />
                        <Button
                            id="Delete"
                            icon="sap-icon://delete"
                            type="Emphasized"
                            press=".onDelete"
                            visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                        />
                        <Button
                            id="Edit"
                            icon="sap-icon://edit"
                            type="Emphasized"
                            press=".onOpenEdit"
                            visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                        />
                        <Button
                            id="Create"
                            icon="sap-icon://create-form"
                            type="Emphasized"
                            press=".onOpenDialog"
                            visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                        />
                    </OverflowToolbar>
                </headerToolbar>
            </Table>
        </content>
    </Panel>
</mvc:View>
