<mvc:View
    xmlns:unified="sap.ui.unified"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="com.candentech.sowtracker.controller.Table"
>
    <Table
        id="projectTable"
        alternateRowColors="true"
        class="sapUiResponsiveMargin"
        width="auto"
        mode="SingleSelectMaster"
    >
        <headerToolbar>
            <OverflowToolbar id="toolbar">
                <ToolbarSpacer id="seprate" />
                <unified:FileUploader
                    id="fileUpload"
                    fileType="xlsx,csv,xls"
                    style="Emphasized"
                    placeholder="Upload"
                    buttonOnly="true"
                    iconOnly="true"
                    icon="sap-icon://upload"
                    multiple="false"
                    change=".onFileUpload"
                />
                <Button
                    id="Delete"
                    icon="sap-icon://delete"
                    type="Emphasized"
                    press=".onDelete"
                />
                <Button
                    id="Edit"
                    icon="sap-icon://edit"
                    type="Emphasized"
                    press=".onOpenEdit"
                />
                <Button
                    id="Create"
                    icon="sap-icon://create-form"
                    type="Emphasized"
                    press=".onOpenDialog"
                />
                <SearchField 
                    placeholder="Search Company Name"
                    key="propertyName" 
                    liveChange="onFilter" 
                    width="15rem"/>
            </OverflowToolbar>
        </headerToolbar>
    </Table>
</mvc:View>
