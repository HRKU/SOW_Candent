<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="com.candentech.sowtracker.controller.Table"
>
    <Panel
        id="_IDGenPanel1"
        accessibleRole="Form"
        backgroundDesign="Transparent"
        class="sapUiResponsiveMargin sapUiSmallMargin"
        height="85vh"
        width="auto"
    >
        <content>
            <Table
                id="projectTable"
                alternateRowColors="true"
                width="auto"
                backgroundDesign="Translucent"
                mode="SingleSelectMaster"
                autoPopinMode="true"
                sticky="ColumnHeaders,HeaderToolbar"
            >
                <headerToolbar>
                    <OverflowToolbar
                        id="toolbar"
                        design="Solid"
                    >
                        <!-- <SearchField
                            id="_IDGenSearchField1"
                            placeholder="Filter by Type"
                            search=".onFilter"
                            width="15rem"
                        /> -->
                        <ComboBox
                            id="_IDGenSearchField1"
                            change=".onFilter"
                            width="15rem"
                            placeholder="Select Type"
                            items="{docs>/type}"
                        >
                            <items>
                                <core:ListItem
                                    id="_IDGenListItem2"
                                    text="{docs>name}"
                                    key="{docs>name}"
                                />
                            </items>
                        </ComboBox>
                        <ComboBox
                            id="_IDGenSearchField2"
                            change=".onFilter"
                            width="15rem"
                            placeholder="Select Company Name"
                            items="{docs>/company}"
                        >
                            <items>
                                <core:ListItem
                                    id="_IDGenListItem3"
                                    text="{docs>name}"
                                    key="{docs>name}"
                                />
                            </items>
                        </ComboBox>
                        <!-- <SearchField
                            id="_IDGenSearchField2"
                            placeholder="Filter by Company Name"
                            search=".onFilter"
                            width="15rem"
                        /> -->
                        <!-- <SearchField
                            id="_IDGenSearchField3"
                            placeholder="Filter by Project Name"
                            search=".onFilter"
                            width="15rem"
                        /> -->
                        <ComboBox
                            id="_IDGenSearchField3"
                            change=".onFilter"
                            width="15rem"
                            placeholder="Select Project Name"
                            items="{docs>/project}"
                        >
                            <items>
                                <core:ListItem
                                    id="_IDGenListItem4"
                                    text="{docs>name}"
                                    key="{docs>name}"
                                />
                            </items>
                        </ComboBox>
                        <ComboBox
                            id="filterStatusComboBox"
                            change=".onFilter"
                            width="15rem"
                            placeholder="Select Status"
                            items="{docs>/status}"
                        >
                            <items>
                                <core:ListItem
                                    id="_IDGenListItem1"
                                    text="{docs>name}"
                                    key="{docs>name}"
                                />
                            </items>
                        </ComboBox>

                        <Button
                            id="clearFilter"
                            text="Clear Filter"
                            press=".onClearFilter"
                        />
                        <ToolbarSpacer id="seprate" />
                        <unified:FileUploader
                            id="fileUpload"
                            fileType="xlsx,csv,xls"
                            style="Emphasized"
                            placeholder="Upload"
                            buttonOnly="true"
                            iconOnly="true"
                            icon="sap-icon://upload"
                            multiple="false"
                            change=".onFileUpload"
                            visible="{path:'userdetails>/role',formatter:'.formatter.userChecker'}"
                        />
                        <Button
                            id="Delete"
                            icon="sap-icon://delete"
                            type="Emphasized"
                            press=".onDelete"
                            visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                        />
                        <Button
                            id="Edit"
                            icon="sap-icon://edit"
                            type="Emphasized"
                            press=".onOpenEdit"
                            visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                        />
                        <Button
                            id="Create"
                            icon="sap-icon://create-form"
                            type="Emphasized"
                            press=".onOpenDialog"
                            visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                        />
                    </OverflowToolbar>
                </headerToolbar>
            </Table>
        </content>
    </Panel>
</mvc:View>
