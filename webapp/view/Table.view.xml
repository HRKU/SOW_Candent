<mvc:View
    xmlns:unified="sap.ui.unified"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="com.candentech.sowtracker.controller.Table"
>
    <Table
        id="projectTable"
        alternateRowColors="true"
        class="sapUiResponsiveMargin"
        width="auto"
        mode="SingleSelectMaster"
        autoPopinMode="true"
    >
        <headerToolbar>
            <OverflowToolbar id="toolbar">
                <ToolbarSpacer id="seprate" />
                <unified:FileUploader
                    id="fileUpload"
                    fileType="xlsx,csv,xls"
                    style="Emphasized"
                    placeholder="Upload"
                    buttonOnly="true"
                    iconOnly="true"
                    icon="sap-icon://upload"
                    multiple="false"
                    change=".onFileUpload"
                    visible="{path:'userdetails>/role',formatter:'.formatter.userChecker'}"
                />
                <Button
                    id="Delete"
                    icon="sap-icon://delete"
                    type="Emphasized"
                    press=".onDelete"
                    visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                />
                <Button
                    id="Edit"
                    icon="sap-icon://edit"
                    type="Emphasized"
                    press=".onOpenEdit"
                    visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                />
                <Button
                    id="Create"
                    icon="sap-icon://create-form"
                    type="Emphasized"
                    press=".onOpenDialog"
                    visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                />
                <SearchField
                    id="_IDGenSearchField1"
                    placeholder="Search Company Name"
                    liveChange="onFilter"
                    width="15rem"
                />
            </OverflowToolbar>
        </headerToolbar>
    </Table>
</mvc:View>
