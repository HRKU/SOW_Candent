<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="com.candentech.sowtracker.controller.Table"
>
    <Table
        id="projectTable"
        alternateRowColors="true"
        class="sapUiResponsiveMargin sapUiSmallMargin"
        width="auto"
        mode="SingleSelectMaster"
        autoPopinMode="true"
    >
        <headerToolbar>
            <OverflowToolbar
                id="toolbar"
                design="Solid"
            >
                <SearchField
                    id="_IDGenSearchField1"
                    placeholder="Filter by Type"
                    search=".onFilter"
                    width="15rem"
                />
                <SearchField
                    id="_IDGenSearchField2"
                    placeholder="Filter by Company Name"
                    search=".onFilter"
                    width="15rem"
                />
                <SearchField
                    id="_IDGenSearchField3"
                    placeholder="Filter by Project Name"
                    search=".onFilter"
                    width="15rem"
                />
                <ComboBox
                    id="filterStatusComboBox"
                    change=".onFilter"
                    width="15rem"
                >
                    <items>
                        <core:ListItem
                            id="_IDGenListItem1"
                            text="Active"
                            key="Active"
                        />
                        <core:ListItem
                            id="_IDGenListItem2"
                            text="Inactive"
                            key="Inactive"
                        />
                    </items>
                </ComboBox>
                <Button
                    id="clearFilter"
                    text="Clear Filter"
                    press=".onClearFilter"
                />
                <ToolbarSpacer id="seprate" />
                <unified:FileUploader
                    id="fileUpload"
                    fileType="xlsx,csv,xls"
                    style="Emphasized"
                    placeholder="Upload"
                    buttonOnly="true"
                    iconOnly="true"
                    icon="sap-icon://upload"
                    multiple="false"
                    change=".onFileUpload"
                    visible="{path:'userdetails>/role',formatter:'.formatter.userChecker'}"
                />
                <Button
                    id="Delete"
                    icon="sap-icon://delete"
                    type="Emphasized"
                    press=".onDelete"
                    visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                />
                <Button
                    id="Edit"
                    icon="sap-icon://edit"
                    type="Emphasized"
                    press=".onOpenEdit"
                    visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                />
                <Button
                    id="Create"
                    icon="sap-icon://create-form"
                    type="Emphasized"
                    press=".onOpenDialog"
                    visible="{path:'userdetails>/role',formatter:'.formatter.checkEditor'}"
                />
            </OverflowToolbar>
        </headerToolbar>
    </Table>
</mvc:View>
