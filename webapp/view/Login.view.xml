<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="com.candentech.sowtracker.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page
        id="idPage"
        showHeader="false"
        class="boxPanel"
    >
        <content>
            <FlexBox
                id="idFlexBox"
                justifyContent="Center"
                height="100%"
                alignItems="Center"
                class="boxInner"
            >
                <VBox
                    id="idVBox"
                    class="classVBox"
                >
                    <form:SimpleForm
                        id="idSimpleForm"
                        class="classHBox flip-container fliper back front"
                    >
                        <HBox
                            id="idHBox"
                            justifyContent="Center"
                            height="60px"
                        >
                            <Image
                                id="idImage"
                                class="imgClass"
                                src="/Assets/images/img.png"
                                width="100%"
                                height="100%"
                            />
                        </HBox>
                        <Label
                            id="idUserNameLabel"
                            required="true"
                            class="sapThemeFont"
                            text="{i18n>UserName}"
                        />
                        <Input
                            type="Email"
                            class="emailClass sapUiResponsiveContentPadding"
                            id="username"
                            placeholder="Enter UserName"
                            width="100%"
                            liveChange="onInputChange"
                            valueState="{= ${email>/valueState} === 'Error' ? 'Error' : 'None'}"
                        />
                        <Label
                            id="idPasswordLabel"
                            required="true"
                            class="sapThemeFont	"
                            text="{i18n>Password}"
                        />
                        <Input
                            class="pwdClass sapUiResponsiveContentPadding"
                            id="password"
                            type="Password"
                            placeholder="Enter Password"
                            showValueHelp="true"
                            valueHelpIconSrc="sap-icon://show"
                            valueHelpRequest=".onShowPasswordSelect"
                            width="100%"
                            liveChange="onInputChange"
                        />
                        <Link
                            text="Forgot Password"
                            textAlign="End"
                            width="100%"
                            press="onLinkPress"
                        />
                         <HBox
                            id="_IDGenHBox2"
                            justifyContent="Center"
                        >
                            <Button
                                id="idLoginButton"
                                class="sapUiResponsiveContentPadding"
                                text="Login"
                                type="Emphasized"
                                press="onLoginPress"
                                width="100px"
                            />
                        </HBox>
                    </form:SimpleForm>
                </VBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
