<mvc:View
    controllerName="com.candentech.sowtracker.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
>
    <Page
        id="mainPage"
        showHeader="false"
        class="classFlexBoxDash"
    >
        <content>
            <tnt:ToolHeader
                id="MainHeader"
                class="sapUiTinyMargin"
                style="Standard"
            >
                <Title
                    id="dashboard"
                    text="Dashboard"
                />
                <ToolbarSpacer id="spacer" />

                <Button
                    type="Neutral"
                    press=".setVisibleDash"
                    id="dashbutton"
                    icon="sap-icon://home"
                    class="sapUiSmallMargin"
                />
                <Button
                    type="Neutral"
                    press=".setVisibleTable"
                    id="tablebutton"
                    icon="sap-icon://filter-fields"
                    class="sapUiSmallMargin"
                />
                <Avatar
                    id="avatar"
                    displaySize="XS"
                    press=".onAvatarPress"
                    class="sapUiSmallMargin"
                />
                <Button
                    type="Emphasized"
                    press=".onLogout"
                    id="logoutbutton"
                    text="logout"
                    class="sapUiSmallMargin"
                />
            </tnt:ToolHeader>
            <mvc:XMLView
                id="dash"
                viewName="com.candentech.sowtracker.view.Dashboard"
            />
            <mvc:XMLView
                id="table"
                visible="false"
                viewName="com.candentech.sowtracker.view.Table"
            />
            <mvc:XMLView
                id="admin"
                visible="false"
                viewName="com.candentech.sowtracker.view.Admin"
            />
        </content>
    </Page>
</mvc:View>
