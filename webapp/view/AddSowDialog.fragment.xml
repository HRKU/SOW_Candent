<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idAddSowDialog"
        title="Add New SOW"
        contentWidth="auto"
        contentHeight="auto"
    >
        <FlexBox
            id="idFlxBoxBtns"
            justifyContent="End"
        >
            <VBox id="idVBoxBtns">
                <HBox id="_IDGenHBox1" class="sapUiMediumMarginTop">
                    <VBox id="_IDGenVBox1" class="sapUiMediumMarginEnd sapUiMediumMarginBegin">
                        <Label
                            id="idLblInpCltName"
                            text="Client Name"
                            design="Bold"
                            class=""
                        />
                        <Input
                            id="idInpCltName"
                            placeholder="Enter Client Name"
                            width="400px"
                        />
                    </VBox>
                    <VBox id="_IDGenVBox2" class="sapUiMediumMarginEnd">
                        <Label
                            id="idLblInpPrjName"
                            text="Project Name"
                            design="Bold"
                        />
                        <Input
                            id="idInpPrjName"
                            placeholder="Enter Project Name"
                            width="400px"
                        />
                    </VBox>
                </HBox>
                <HBox id="_IDGenHBox2" class="sapUiMediumMarginTop">
                    <VBox id="_IDGenVBox3" class="sapUiMediumMarginEnd sapUiMediumMarginBegin">
                        <Label
                            id="idLblInpSts"
                            text="Project Status"
                            design="Bold"
                        />
                        <ComboBox
                            id="idInpSts"
                            placeholder="Select Status"
                            width="400px"
                        >
                            <core:Item id="_IDGenItem1"
                                key="Active"
                                text="Active"
                            />
                            <core:Item id="_IDGenItem2"
                                key="Inactive"
                                text="Inactive"
                            />
                        </ComboBox>
                    </VBox>
                    <VBox id="_IDGenVBox4" class="sapUiMediumMarginEnd">
                        <Label
                            id="idLblInpPrvType"
                            text="Project Type"
                            design="Bold"
                        />
                        <ComboBox
                            id="idInpPrjType"
                            placeholder="Select Status"
                            width="400px"
                        >
                            <core:Item id="_IDGenItem3"
                                key="Fixed price"
                                text="Fixed price"
                            />
                            <core:Item id="_IDGenItem4"
                                key="Staffing"
                                text="Staffing"
                            />
                            <core:Item id="_IDGenItem5"
                                key="None"
                                text="None"
                            />
                        </ComboBox>
                    </VBox>
                </HBox>
                <HBox id="_IDGenHBox3"
                    class="sapUiMediumMarginTop"
                    justifyContent="SpaceBetween"
                >
                    <VBox id="_IDGenVBox5" class="sapUiMediumMarginEnd sapUiMediumMarginBegin">
                        <Label
                            id="idLblInpAssgn"
                            text="Document Type"
                            design="Bold"
                        />
                        <ComboBox
                            id="idInpAssgn"
                            placeholder="Select Document type"
                            width="250px"
                        >
                            <core:Item id="_IDGenItem6"
                                key="MSA"
                                text="MSA"
                            />
                            <core:Item id="_IDGenItem7"
                                key="SOW"
                                text="SOW"
                            />
                            <core:Item id="_IDGenItem8"
                                key="NDA"
                                text="NDA"
                            />
                            <core:Item id="_IDGenItem9"
                                key="CR"
                                text="CR"
                            />
                        </ComboBox>
                    </VBox>
                    <!-- Start Date -->
                    <VBox id="_IDGenVBox6">
                        <Label
                            id="idLblStartDate"
                            text="Start Date"
                            design="Bold"
                        />
                        <DatePicker
                            id="idStartDatePicker"
                            width="250px"
                        />
                    </VBox>
                    <!-- End Date -->
                    <VBox id="_IDGenVBox7" class="sapUiMediumMarginEnd sapUiMediumMarginBegin">
                        <Label
                            id="idLblEndDate"
                            text="End Date"
                            design="Bold"
                        />
                        <DatePicker
                            id="idEndDatePicker"
                            width="250px"
                        />
                    </VBox>
                </HBox>
                <HBox
                    class="sapUiSmallMarginEnd"
                    id="idHBoxBtns"
                    justifyContent="End"
                >
                    <Button
                        id="idSbtBtn"
                        text="Submit"
                        press=".onsubmit"
                        type="Emphasized"
                        class="sapUiSmallMargin"
                    />
                    <Button
                        id="idclsBtn"
                        text="Cancel"
                        press=".onCloseDialog"
                        type="Emphasized"
                        class="sapUiSmallMargin"
                    />
                </HBox>
            </VBox>
        </FlexBox>
    </Dialog>
</core:FragmentDefinition>
