<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idAddSowDialog"
        title="Add New SOW"
        contentWidth="auto"
        contentHeight="auto"
    >
        <FlexBox
            id="idFlxBoxBtns"
            justifyContent="End"
        >
            <VBox id="idVBoxBtns">
                <HBox
                    id="_IDGenHBox1"
                    class="sapUiMediumMargin"
                    justifyContent="SpaceBetween"
                >
                    <VBox id="_IDGenVBox1">
                        <Label
                            id="idLblInpCltName"
                            text="Company Name"
                            design="Bold"
                            class=""
                        />
                        <Input
                            id="CompanyName"
                            placeholder="Enter Company Name"
                            width="auto"
                        />
                    </VBox>
                    <VBox id="_IDGenVBox2">
                        <Label
                            id="idLblInpPrjName"
                            text="Project Name"
                            design="Bold"
                        />
                        <Input
                            id="ProjectName"
                            placeholder="Enter Project Name"
                            width="auto"
                        />
                    </VBox>
                    <VBox id="_IDGenVBox10">
                        <Label
                            id="idLblInpAgrrNo"
                            text="Agreement Number"
                            design="Bold"
                        />
                        <Input
                            id="AgreementNo"
                            type="Number"
                            placeholder="Enter Agreement No"
                            width="auto"
                        />
                    </VBox>
                </HBox>
                <HBox id="_IDGenHBox2">
                    <VBox
                        id="_IDGenVBox3"
                        class="sapUiMediumMarginEnd sapUiMediumMarginBegin"
                    >
                        <Label
                            id="projectStatus"
                            text="Project Status"
                            design="Bold"
                        />
                        <ComboBox
                            id="Status"
                            placeholder="Select Status"
                            width="auto"
                        >
                            <core:Item
                                id="_IDGenItem1"
                                key="Active"
                                text="Active"
                            />
                            <core:Item
                                id="_IDGenItem2"
                                key="Inactive"
                                text="Inactive"
                            />
                        </ComboBox>
                    </VBox>
                    <VBox
                        id="_IDGenVBox4"
                        class="sapUiMediumMarginEnd"
                    >
                        <Label
                            id="projectType1"
                            text="Project Type"
                            design="Bold"
                        />
                        <ComboBox
                            id="ProjectType"
                            placeholder="Select Status"
                            width="auto"
                        >
                            <core:Item
                                id="_IDGenItem3"
                                key="Fixed price"
                                text="Fixed price"
                            />
                            <core:Item
                                id="_IDGenItem4"
                                key="Staffing"
                                text="Staffing"
                            />
                            <core:Item
                                id="_IDGenItem5"
                                key="None"
                                text="None"
                            />
                        </ComboBox>
                    </VBox>
                    <VBox
                        id="_IDGenVBox8"
                        class="sapUiMediumMarginEnd"
                    >
                        <Label
                            id="idLblInpAssgn"
                            text="Document Type"
                            design="Bold"
                        />
                        <ComboBox
                            id="Type"
                            placeholder="Select Document type"
                            width="auto"
                        >
                            <core:Item
                                id="_IDGenItem6"
                                key="MSA"
                                text="MSA"
                            />
                            <core:Item
                                id="_IDGenItem7"
                                key="SOW"
                                text="SOW"
                            />
                            <core:Item
                                id="_IDGenItem8"
                                key="NDA"
                                text="NDA"
                            />
                            <core:Item
                                id="_IDGenItem9"
                                key="CR"
                                text="CR"
                            />
                        </ComboBox>
                    </VBox>
                </HBox>
                <HBox
                    id="_IDGenHBox3"
                    class="sapUiMediumMargin"
                    justifyContent="SpaceBetween"
                >
                    <VBox id="_IDGenVBox9">
                        <Label
                            id="idLblStartDate1"
                            text="Agreement Date"
                            design="Bold"
                        />
                        <DatePicker
                            valueFormat="yyyy-MM-dd"
                            id="AgreementDate"
                            width="auto"
                        />
                    </VBox>
                    <!-- Start Date -->
                    <VBox id="_IDGenVBox6">
                        <Label
                            id="idLblStartDate"
                            text="Start Date"
                            design="Bold"
                        />
                        <DatePicker
                            valueFormat="yyyy-MM-dd"
                            id="AgreementStartDate"
                            width="auto"
                        />
                    </VBox>
                    <!-- End Date -->
                    <VBox id="_IDGenVBox7">
                        <Label
                            id="idLblEndDate"
                            text="End Date"
                            design="Bold"
                        />
                        <DatePicker
                            valueFormat="yyyy-MM-dd"
                            id="AgreementEndDate"
                            width="auto"
                        />
                    </VBox>
                </HBox>
                <HBox
                    class="sapUiSmallMarginEnd"
                    id="idHBoxBtns"
                    justifyContent="End"
                >
                    <Button
                        id="idSbtBtn"
                        text="Submit"
                        press=".onSubmit"
                        type="Emphasized"
                        class="sapUiSmallMargin"
                    />
                    <Button
                        id="idclsBtn"
                        text="Cancel"
                        press=".onCloseDialog"
                        type="Emphasized"
                        class="sapUiSmallMargin"
                    />
                </HBox>
            </VBox>
        </FlexBox>
    </Dialog>
</core:FragmentDefinition>
