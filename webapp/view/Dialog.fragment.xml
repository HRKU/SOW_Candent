<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idDialog"
        resizable="false"
        draggable="false"
        title="Add new Roles"
    >
        <VBox
            id="_IDGenVBox1"
            class="sapUiSmallMargin"
        >
            <VBox id="_IDGenVBox2">
                <Label
                    id="_IDGenLabel1"
                    showColon="true"
                    text="Username"
                />
                <Input
                    id="username"
                    placeholder="Enter username"
                />
            </VBox>
            <Label
                id="Password"
                showColon="true"
                text="Password"
            />
            <Input
                id="idPassword"
                type="Password"
                placeholder="Enter Password"
                showValueHelp="true"
                valueHelpIconSrc="sap-icon://show"
                valueHelpRequest=".onShowPasswordSelect"
                liveChange="onInputChange"
            />
            <VBox id="_IDGenVBox3" />
            <VBox id="_IDGenVBox4">
                <Label
                    id="_IDGenLabel2"
                    text="Role"
                />
                <ComboBox id="_IDGenComboBox1">
                    <core:Item
                        id="_IDGenItem1"
                        key=""
                        text="Administrator"
                    />
                    <core:Item
                        id="_IDGenItem2"
                        key=""
                        text="Editor"
                    />
                    <core:Item
                        id="_IDGenItem3"
                        key=""
                        text="Viewer"
                    />
                </ComboBox>
            </VBox>
        </VBox>
        <HBox
            id="_IDGenHBox1"
            class="sapUiSmallMargin"
            justifyContent="SpaceBetween"
        >
            <Button
                id="_IDGenButton1"
                press=".handleSubmit"
                text="Submit"
                type="Emphasized"
                class="sapUiTinyMarginTop sapUiTinyMarginBottom"
            />
            <Button
                id="_IDGenButton"
                press=".handleClose"
                text="Close"
                type="Emphasized"
                class="sapUiTinyMarginTop sapUiTinyMarginBottom"
            />
        </HBox>
    </Dialog>
</core:FragmentDefinition>
