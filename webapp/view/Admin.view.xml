<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="com.candentech.sowtracker.controller.Admin"
>
    <Page
        id="_IDGenPage1"
        title="Admin"
    >
        <content>
            <Table
                id="rolesTable"
                items="{roles>/roles}"
                busyIndicatorDelay="{masterView>/delay}"
                noDataText="{masterView>/noDataText}"
            >
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar1">
                        <Title
                            id="_IDGenTitle1"
                            text="Roles and Permissions"
                            level="H2"
                        />
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        <Button
                            id="_IDGenButton1"
                            text="Add Role"
                            press=".createRole"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn1">
                        <Text
                            id="_IDGenText1"
                            text="Name"
                        />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text
                            id="_IDGenText2"
                            text="Description"
                        />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Text
                            id="_IDGenText3"
                            text="Permissions"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <Text
                                id="_IDGenText4"
                                text="{roles>name}"
                            />
                            <Text
                                id="_IDGenText5"
                                text="{roles>description}"
                            />
                            <Text
                                id="_IDGenText6"
                                text="{roles>permissions}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
