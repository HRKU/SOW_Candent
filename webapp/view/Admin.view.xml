<mvc:View
    controllerName="com.candentech.sowtracker.controller.Admin"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Panel
        id="_IDGenPanel1"
        height="100%"
        width="100%"
    >
        <Page id="idPanel">
            <Dialog
                id="idDialog"
                resizable="true"
                draggable="true"
                title="Add new Roles"
            >
                <VBox
                    id="_IDGenVBox1"
                    class="sapUiSmallMargin"
                >
                    <VBox id="_IDGenVBox2">
                        <Label
                            id="_IDGenLabel1"
                            showColon="true"
                            text="Username"
                        />
                        <Input
                            id="username"
                            placeholder="Enter username"
                        />
                    </VBox>
                    <Label
                        id="_IDGenLabel2"
                        showColon="true"
                        text="Password"
                    />
                    <Input
                        id="password"
                        type="Password"
                        placeholder="Enter password"
                    />
                    <VBox id="_IDGenVBox3" />
                    <VBox id="_IDGenVBox4">
                        <ComboBox id="_IDGenComboBox1">
                            <core:Item
                                id="_IDGenItem1"
                                key="{ProductId}"
                                text="{Name}"
                            />
                        </ComboBox>
                    </VBox>
                </VBox>
                <HBox
                    id="_IDGenHBox1"
                    class="sapUiSmallMargin"
                >
                    <Button
                        id="_IDGenButton1"
                        press=".handleClose"
                        text="Register"
                        class="sapUiTinyMarginTop sapUiTinyMarginBottom"
                    />
                </HBox>
            </Dialog>

            <Table id="myTable">
                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <content>
                            <Title
                                id="_IDGenTitle1"
                                text="Roles and Permission"
                            />
                            <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                            <Button
                                id="_IDGenButton2"
                                text="Add Role"
                                press=".handleOpen"
                            />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn1">
                        <header>
                            <Label
                                id="_IDGenLabel3"
                                text="Name"
                            />
                        </header>
                    </Column>
                    <Column id="_IDGenColumn2">
                        <header>
                            <Label
                                id="_IDGenLabel4"
                                text="Description"
                            />
                        </header>
                    </Column>
                    <Column id="_IDGenColumn3">
                        <header>
                            <Label
                                id="_IDGenLabel5"
                                text="Permission"
                            />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <ObjectIdentifier
                                id="_IDGenObjectIdentifier1"
                                title="Administrator"
                            />
                            <ObjectIdentifier
                                id="_IDGenObjectIdentifier2"
                                title="Full Access to all feature and data"
                            />
                            <ObjectIdentifier
                                id="_IDGenObjectIdentifier3"
                                title="read own data, create user, edit user, delete user, create roles, edit roles delete roles, manage permission"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem2">
                        <cells>
                            <ObjectIdentifier
                                id="_IDGenObjectIdentifier4"
                                title="Editor"
                            />
                            <ObjectIdentifier
                                id="_IDGenObjectIdentifier5"
                                title="Can create,edit, and delete their own data"
                            />
                            <ObjectIdentifier
                                id="_IDGenObjectIdentifier6"
                                title="read own data, creatte own dat, edit own data, delete own data, read all data"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem3">
                        <cells>
                            <ObjectIdentifier
                                id="_IDGenObjectIdentifier7"
                                title="viewer"
                            />
                            <ObjectIdentifier
                                id="_IDGenObjectIdentifier8"
                                title="can only view data"
                            />
                            <ObjectIdentifier
                                id="_IDGenObjectIdentifier9"
                                title="read all data"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Page>
    </Panel>
</mvc:View>
